<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >
    <name>VMPAYMENT_PAYSONINVOICE</name>
    <creationDate>Okt 03 2012</creationDate>
    <author>Payson AB</author>
    <authorUrl>http://www.payson.se</authorUrl>
    <copyright></copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0</version>
    <description>Paysoninvoice payment plugin</description>
    <languages folder="language">
	<language tag="en-GB">en-GB/en-GB.plg_vmpayment_paysoninvoice.ini</language>
	<language tag="en-GB">en-GB/en-GB.plg_vmpayment_paysoninvoice.sys.ini</language>
    </languages>
    <files>
	<filename plugin="paysoninvoice">paysoninvoice.php</filename>
    </files>
    <params addpath="/administrator/components/com_virtuemart/elements">
	<param type="vmjpluginwarning" />
        <param name="sandbox" type="radio" default="0" label="VMPAYMENT_PAYSONINVOICE_SANDBOX" description="VMPAYMENT_PAYSONINVOICE_SANDBOX_EXPLAIN" >
		<option value="0">Live</option>
		<option value="1">Sandbox</option>
	</param>	
	<param name="seller_email" type="text" size="50" label="VMPAYMENT_PAYSONINVOICE_SELLERMAIL" description="VMPAYMENT_PAYSONINVOICE_SELLERMAIL_EXPLAIN" />
	<param name="agent_id" type="text" size="50" label="VMPAYMENT_PAYSONINVOICE_AGENT_ID" description="VMPAYMENT_PAYSONINVOICE_AGENT_ID_EXPLAIN" />
	<param name="md5_key" type="text" size="50" label="VMPAYMENT_PAYSONINVOICE_MD5KEY" description="VMPAYMENT_PAYSONINVOICE_MD5KEY_EXPLAIN" />
	<param name="secure_word" type="text" label="VMPAYMENT_PAYSONINVOICE_SECURE_WORD" description="VMPAYMENT_PAYSONINVOICE_SECURE_WORD_EXPLAIN" />
	

	<param name="payment_approved_status" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_PAYSONINVOICE_ORDERSTATUS_SUCCESS" description="VMPAYMENT_PAYSONINVOICE_ORDERSTATUS_SUCCESS_EXPLAIN" />
	<param name="payment_declined_status" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_PAYSONINVOICE_ORDERSTATUS_FAIL" description="VMPAYMENT_PAYSONINVOICE_ORDERSTATUS_FAIL_EXPLAIN" />

	<param name="logg" type="radio" default="0" label="VMPAYMENT_PAYSONINVOICE_LOGG" description="VMPAYMENT_PAYSONINVOICE_LOGG_EXPLAIN" >
		<option value="0">No</option>
		<option value="1">Yes</option>
	</param>
	
	<param	name="payment_logos" type="vmfiles" label="VMPAYMENT_PAYSONINVOICE_LOGOS"
			description="VMPAYMENT_PAYSONINVOICE_LOGOS_EXPLAIN"
			directory="/images/stories/virtuemart/payment"
			default="paysoninvoice.png" hide_default="1" hide_none="1"
			stripext="0" exclude="^_" />


	<param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_PAYSONINVOICE_COUNTRIES" description="VMPAYMENT_PAYSONINVOICE_COUNTRIES_EXPLAIN"/>

	<param name="min_amount" type="text"  label="VMPAYMENT_PAYSONINVOICE_MIN_AMOUNT" description="VMPAYMENT_PAYSONINVOICE_MIN_AMOUNT_EXPLAIN" />
	<param name="max_amount" type="text"  label="VMPAYMENT_PAYSONINVOICE_MAX_AMOUNT" description="VMPAYMENT_PAYSONINVOICE_MAX_AMOUNT_EXPLAIN" />
	<param name="cost_per_transaction" type="text"  label="VMPAYMENT_PAYSONINVOICE_COST_PER_TRANSACTION" description="VMPAYMENT_PAYSONINVOICE_COST_PER_TRANSACTION_EXPLAIN" />
	<param name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_PAYSONINVOICE_TAX" description="VMPAYMENT_PAYSONINVOICE_TAX_EXPLAIN" />
	<param name="payment_info" type="textarea" cols="60" rows="30" default="add a message to display with the order" label="VMPAYMENT_PAYSONINVOICE_PAYMENTINFO" description="VMPAYMENT_PAYSONINVOICE_PAYMENTINFO_EXPLAIN" />



    </params>



</install>
